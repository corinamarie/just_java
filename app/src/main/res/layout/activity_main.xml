<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.corinamariebernstein.justjava.MainActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/java"
        android:scaleType="center"
        android:alpha="0.8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coffee order form"
                android:textSize="30sp"
                android:textColor="#241514"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="120dp"
                android:textAllCaps="true"/>

            <View
                android:layout_width="200dp"
                android:layout_height="0.4dp"
                android:visibility="visible"
                android:background="#C4AF7C"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toppings"
                android:layout_marginBottom="16dp"
                android:textAllCaps="true"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/whipped_cream"
                android:text="whipped cream"
                android:textColor="#C4AF7C"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="25dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/crushed_hazelnuts"
                android:text="crushed hazelnuts"
                android:textColor="#C4AF7C"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="25dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/caramel"
                android:text="caramel"
                android:textColor="#C4AF7C"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="25dp"/>

            <View
                android:layout_width="200dp"
                android:layout_height="0.4dp"
                android:visibility="visible"
                android:background="#C4AF7C"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cuantos cafes?"
                android:layout_marginBottom="16dp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-"
                    android:onClick="decrement"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="#C4AF7C"
                    android:id="@+id/quantity_text_view"
                    android:textSize="100sp"/>

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:onClick="increment"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="order summary"
                android:layout_marginBottom="16dp"
                android:textAllCaps="true"/>

            <View
                android:layout_width="200dp"
                android:layout_height="0.4dp"
                android:visibility="visible"
                android:background="#C4AF7C"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="16dp"
                android:id="@+id/order_summary_text_view"
                android:textSize="16sp"
                android:textColor="#C4AF7C" />

            <View
                android:layout_width="200dp"
                android:layout_height="0.4dp"
                android:visibility="visible"
                android:background="#C4AF7C"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:onClick="submitOrder"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
